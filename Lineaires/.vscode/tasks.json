{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C: build all .c",
      "type": "shell",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "file.c",
        "liste.c",
        "pile.c",
        "-o",
        "${workspaceFolder}/run_prog"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}